div.container
  div.row
    div.col-lg-12
      publish-header(page='Dashboard')
  div.row
    div.col-lg-12
      h1 新增文章
  div.row#add-article-form-container
    div.col-lg-12
      form#add-article.form-horizontal(role='form', ng-submit='submit()')
        div.form-group
          label.col-sm-2.control-label(for='title') 主標題
          div.col-sm-10
            input.form-control(ng-model='title', type='text', placeholder='請輸入文章標題')
        div.form-group
          label.col-sm-2.control-label(for='author') 撰稿
          div.col-sm-8
            author-selector#new-article-author-selector.author-selector
          label.col-sm-1.control-label 採訪
          div.col-sm-1.checkbox-container
            div.checkbox(name='interview', ng-class='isInterview ? "active" : ""', ng-click='isInterview = !isInterview')
              div.checker
                span.glyphicon.glyphicon-ok
        div.form-group
          label.col-sm-2.control-label(for='category') 類別
          div.col-sm-10
            select#category.form-control(ng-model='category', ng-if='categories.length', ng-options='category._id as category.name for category in categories')
        div.form-group
          label.col-sm-2.control-label(for='content') 內文
          div.col-sm-10
            text-angular.main-content(ng-model='mainContent', text-angular-name='mainEditor', ta-text-editor-class="editor-content", ta-toolbar="[['paragraph', 'subtitle', 'picture', 'calendar', 'vote'], ['fit']]")
        div.form-group
          label.col-sm-2.control-label(for='tag') 標籤
          div.col-sm-10
            tag-selector
        div.form-group
          div.col-sm-10.col-sm-offset-2
            button.btn.btn-default(type='submit') 新增文章