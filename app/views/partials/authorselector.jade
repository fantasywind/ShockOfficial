input.author-input.form-control(type='text', placeholder='請輸入協作者清單，並以半型逗點(,)分隔。', ng-model='inputText')
div.author-container
  div.author(ng-repeat='author in authors', ng-class='author.type')
    span(ng-bind='author.name')
    span.remove-btn.fa(ng-class='author.type === AUTHOR_TYPE.FETCHING ? "fa-spin fa-spinner" : "fa-times"', ng-click='removeThis(author)', ng-hide='AUTHOR_TYPE.SELF === author.type')